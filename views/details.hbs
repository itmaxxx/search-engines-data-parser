<html>
	<head>
		<title>Результаты парсинга</title>
		<meta charset='utf-8' />
		<link
			href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'
			rel='stylesheet'
			integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x'
			crossorigin='anonymous'
		/>
	</head>

	<body>
		{{> menu}}

		<div class='container'>
			<div class='row'>
				<div class='col'>
					<nav aria-label="breadcrumb" class="mt-3">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/parser/dashboard">Панель управления</a></li>
							<li class="breadcrumb-item active" aria-current="page">{{Query}}</li>
						</ol>
					</nav>
					<div class="card mb-3 col-12">
						<div class="row g-0">
							<div class="col-md-4" style="overflow: hidden;">
								
							</div>
							<div class="col-md-8">
								<div class="card-body">
									<h4 class="card-title">{{Query}} <span class="badge bg-secondary">#{{Id}}</span></h4>
									{{#if Phones}}
										<p class="card-text">
											Номера телефона
											<ul class="list-group">
												{{#each Phones}}
													<li class="list-group-item">{{this.Phone}}</li>
												{{/each}}
											</ul>
										</p>
										{{else}}
										<h5 class="card-text">{{Phone}}</h5>
									{{/if}}
									<p class="card-text">
										Дополнительная информация
										<ul class="list-group" id='information'></ul>
									</p>
									<a href="/{{Output}}" target="_blank" class="btn btn-primary">Результаты в JSON</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		{{> footer}}
	</body>
</html>
